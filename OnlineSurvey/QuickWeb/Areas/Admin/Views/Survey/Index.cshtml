
@{
    ViewBag.Title = "问卷管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/Assets/zTree/zTreeStyle.css" type="text/css">
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">@ViewBag.Title</h3>
                <div class="pull-right box-tools">
                    <button id="btnAdd" class="btn btn-primary" type="button" data-original-title="新增问卷" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-plus-square"></i>&nbsp;&nbsp;新增
                    </button>
                    <button id="btnDelete" title="" class="btn btn-danger" type="button" data-original-title="删除问卷" data-toggle="tooltip" data-widget="">
                        <i class="fa fa-times"></i>&nbsp;&nbsp;删除
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="sample_2_info">
                        <thead>
                            <tr role="row">
                                <th class="table-checkbox" style="width:40px;text-align:center;"><input id="checkAll" class="group-checkable" type="checkbox"></th>
                                <th tabindex="0" aria-label="">
                                    问卷名称
                                </th>
                                <th tabindex="0" aria-label="">
                                    问卷说明
                                </th>
                                <th tabindex="0" aria-label="">
                                    版权信息
                                </th>
                                <th tabindex="0" aria-label="">
                                    创建时间
                                </th>
                                <th tabindex="0" aria-label="">
                                    问卷状态
                                </th>
                                <th tabindex="0" style="width: 230px;" aria-label="">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tableBody"></tbody>
                    </table>
                    <div class="paging-toolbar">
                        <ul id="grid_paging_part"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@RenderPage("~/Areas/Admin/Views/Survey/Edit.cshtml")

@RenderPage("~/Areas/Admin/Views/Survey/Set.cshtml")

@section scripts{
    <script type="text/javascript" src="~/Assets/zTree/jquery.ztree.core-3.5.js"></script>
    <script type="text/javascript" src="~/Assets/zTree/jquery.ztree.excheck-3.5.js"></script>
    <script type="text/javascript" src="~/Assets/zTree/jquery.ztree.exedit-3.5.js"></script>
    <script src="~/Scripts/Survey/Index.js"></script>
}


